<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardce"
    android:layout_margin="20dp"
    app:cardCornerRadius="40dp"
    android:elevation="100dp"
    android:padding="10dp"
    android:backgroundTint="#FEFBF0"
    tools:context=".slideshow.co">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/civil"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Civil Engineering"
                android:id="@+id/head2"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="5dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Civil engineering is a professional engineering discipline that deals with the design, construction, and maintenance of the physical and naturally built environment, including public works canals, dams, airports,  structural components of buildings, and railways"
            android:textSize="15dp"
            android:justificationMode="inter_word"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>